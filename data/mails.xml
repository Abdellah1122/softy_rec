<?xml version="1.0"?>
<odoo><data noupdate="1">

    <!-- 1. Accusé de réception de candidature -->
    <record id="email_template_data_applicant_acknowledgment_fr" model="mail.template">
        <field name="name">Softy Recrutement: Accusé de réception de candidature</field>
        <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
        <field name="subject">Confirmation de réception de votre candidature – {{ object.job_id.name }}</field>
        <field name="email_to">{{ (not object.partner_id and object.email_from or '') }}</field>
        <field name="partner_to">{{ object.partner_id.id or '' }}</field>
        <field name="description">Accusé de réception automatique de candidature</field>
        <field name="body_html" type="html">
<div style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; max-width: 600px; margin: 0 auto; background-color: #ffffff;">
    <div style="text-align: center; padding: 40px 0 30px 0; border-bottom: 1px solid #e8e8e8;">
        <h1 style="color: #2c3e50; font-size: 24px; font-weight: 300; margin: 0; letter-spacing: 1px;">
            ACCUSÉ DE RÉCEPTION
        </h1>
        <div style="color: #7f8c8d; font-size: 14px; margin-top: 8px; font-weight: 300;">
            Candidature reçue avec succès
        </div>
    </div>
    
    <div style="padding: 40px 30px; line-height: 1.6;">
        <p style="color: #2c3e50; font-size: 16px; margin: 0 0 20px 0;">
            Bonjour <t t-if="object.partner_name"><strong><t t-out="object.partner_name"/></strong></t><t t-else="">Madame, Monsieur</t>,
        </p>
        
        <p style="color: #34495e; font-size: 15px; margin: 0 0 25px 0;">
            Nous vous remercions pour l'intérêt que vous portez à 
            <strong><t t-out="object.company_id.name or 'notre entreprise'"/></strong> 
            et pour votre candidature au poste de <strong><t t-out="object.job_id.name or ''"/></strong>.
        </p>
        
        <div style="background-color: #f8f9fa; border-left: 3px solid #95a5a6; padding: 20px; margin: 30px 0;">
            <p style="color: #34495e; font-size: 15px; margin: 0;">
                Votre dossier a bien été reçu et sera étudié avec attention par notre équipe recrutement. 
                Nous reviendrons vers vous dans les plus brefs délais si votre profil correspond aux attentes du poste.
            </p>
        </div>

        <div t-if="'website_url' in object.job_id and object.job_id.website_url" style="text-align: center; margin: 30px 0;">
            <a t-att-href="object.job_id.website_url"
                style="display: inline-block; background-color: #34495e; color: #ffffff; text-decoration: none; padding: 12px 30px; border-radius: 2px; font-weight: 300; font-size: 14px; letter-spacing: 0.5px;">
                CONSULTER L'OFFRE
            </a>
        </div>

        <p style="color: #2c3e50; font-size: 15px; margin: 40px 0 0 0;">
            Bien cordialement,
        </p>
    </div>
    
    <div style="background-color: #f8f9fa; padding: 25px 30px; border-top: 1px solid #e8e8e8;">
        <div style="color: #7f8c8d; font-size: 13px; line-height: 1.5;">
            <t t-if="object.user_id">
                <div style="font-weight: 500; color: #2c3e50; margin-bottom: 5px;">
                    <t t-out="object.user_id.name or ''">Responsable RH</t>
                </div>
                <div><t t-out="object.user_id.email or ''">rh@entreprise.com</t></div>
                <div t-if="object.user_id.phone"><t t-out="object.user_id.phone or ''"/></div>
            </t>
            <t t-else="">
                <div style="font-weight: 500; color: #2c3e50; margin-bottom: 5px;">
                    <t t-out="object.company_id.name or ''">Notre Entreprise</t>
                </div>
                <div>Direction des Ressources Humaines</div>
            </t>
        </div>
    </div>
</div>
        </field>
        <field name="auto_delete" eval="True"/>
        <field name="lang">{{ object.partner_id.lang or 'fr_FR' }}</field>
    </record>

    <!-- 2. Convocation à un entretien -->
    <record id="email_template_data_applicant_interview_invitation_fr" model="mail.template">
        <field name="name">Softy Recrutement: Convocation à un entretien</field>
        <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
        <field name="subject">Entretien de recrutement – {{ object.job_id.name }}</field>
        <field name="email_to">{{ (not object.partner_id and object.email_from or '') }}</field>
        <field name="partner_to">{{ object.partner_id.id or '' }}</field>
        <field name="description">Invitation à un entretien de recrutement</field>
        <field name="body_html" type="html">
<div style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; max-width: 600px; margin: 0 auto; background-color: #ffffff;">
    <div style="text-align: center; padding: 40px 0 30px 0; border-bottom: 1px solid #e8e8e8;">
        <h1 style="color: #2c3e50; font-size: 24px; font-weight: 300; margin: 0; letter-spacing: 1px;">
            INVITATION À UN ENTRETIEN
        </h1>
        <div style="color: #7f8c8d; font-size: 14px; margin-top: 8px; font-weight: 300;">
            Nous souhaitons vous rencontrer
        </div>
    </div>
    
    <div style="padding: 40px 30px; line-height: 1.6;">
        <p style="color: #2c3e50; font-size: 16px; margin: 0 0 20px 0;">
            Bonjour <t t-if="object.partner_name"><strong><t t-out="object.partner_name"/></strong></t><t t-else="">Madame, Monsieur</t>,
        </p>
        
        <p style="color: #34495e; font-size: 15px; margin: 0 0 30px 0;">
            À la suite de l'analyse de votre candidature, nous souhaiterions vous rencontrer pour un entretien 
            relatif au poste de <strong><t t-out="object.job_id.name or ''"/></strong>.
        </p>
        
        <div style="background-color: #f8f9fa; border: 1px solid #e8e8e8; padding: 25px; margin: 30px 0;">
            <h3 style="color: #2c3e50; font-size: 16px; font-weight: 500; margin: 0 0 20px 0; letter-spacing: 0.5px;">
                DÉTAILS DE L'ENTRETIEN
            </h3>
            <table style="width: 100%; border-collapse: collapse;">
                <tr>
                    <td style="color: #7f8c8d; font-size: 14px; font-weight: 500; padding: 8px 0; width: 80px;">Date</td>
                    <td style="color: #34495e; font-size: 14px; padding: 8px 0;">[À compléter - Jour, Date]</td>
                </tr>
                <tr>
                    <td style="color: #7f8c8d; font-size: 14px; font-weight: 500; padding: 8px 0;">Heure</td>
                    <td style="color: #34495e; font-size: 14px; padding: 8px 0;">[À compléter - Heure précise]</td>
                </tr>
                <tr>
                    <td style="color: #7f8c8d; font-size: 14px; font-weight: 500; padding: 8px 0; vertical-align: top;">Lieu</td>
                    <td style="color: #34495e; font-size: 14px; padding: 8px 0;">
                        <t t-if="object.job_id.address_id">
                            <t t-out="object.job_id.address_id.contact_address or '[À compléter]'"/>
                        </t>
                        <t t-else="">[À compléter / Lien de vidéoconférence]</t>
                    </td>
                </tr>
            </table>
        </div>

        <div style="background-color: #34495e; color: #ffffff; padding: 20px; margin: 30px 0; text-align: center;">
            <p style="margin: 0; font-size: 15px; font-weight: 300;">
                Merci de bien vouloir nous confirmer votre disponibilité par retour de mail.
            </p>
        </div>

        <t t-if="object.user_id">
            <div style="border-top: 1px solid #e8e8e8; padding-top: 25px; margin-top: 30px;">
                <p style="color: #7f8c8d; font-size: 14px; margin: 0 0 10px 0;">Vous serez reçu(e) par :</p>
                <p style="color: #2c3e50; font-size: 15px; font-weight: 500; margin: 0;">
                    <t t-out="object.user_id.name or ''">Responsable RH</t>
                </p>
                <p style="color: #7f8c8d; font-size: 14px; margin: 5px 0 0 0;">
                    <t t-out="object.user_id.email or ''">rh@entreprise.com</t>
                    <span t-if="object.user_id.phone"> • <t t-out="object.user_id.phone or ''"/></span>
                </p>
            </div>
        </t>

        <p style="color: #2c3e50; font-size: 15px; margin: 40px 0 0 0;">
            Cordialement,
        </p>
    </div>
    
    <div style="background-color: #f8f9fa; padding: 25px 30px; border-top: 1px solid #e8e8e8;">
        <div style="color: #7f8c8d; font-size: 13px; line-height: 1.5;">
            <div style="font-weight: 500; color: #2c3e50; margin-bottom: 5px;">
                <t t-out="object.company_id.name or 'Notre Entreprise'"/>
            </div>
            <div>Direction des Ressources Humaines</div>
        </div>
    </div>
</div>
        </field>
        <field name="auto_delete" eval="True"/>
        <field name="lang">{{ object.partner_id.lang or 'fr_FR' }}</field>
    </record>

