<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Window Action -->
        <record id="action_softy_rec_docs" model="ir.actions.act_window">
            <field name="name">Documents de Recrutement</field>
            <field name="res_model">softy.rec.doc</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucun document trouvé. Créez-en un pour commencer.
                </p>
                <p>
                    Gérez vos documents de recrutement comme les modèles de contrats,
                    formulaires d'entretien, politiques RH, etc.
                </p>
            </field>
        </record>

        <!-- List View (was Tree in older versions) -->
        <record id="view_softy_rec_docs_list" model="ir.ui.view">
            <field name="name">softy.rec.doc.list</field>
            <field name="model">softy.rec.doc</field>
            <field name="arch" type="xml">
                <list string="Documents de Recrutement" sample="1">
                    <field name="nom" string="Nom du Document"/>
                    <field name="doc" widget="binary" filename="nom" string="Télécharger"/>
                    <field name="active" widget="boolean_toggle" optional="show"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_softy_rec_docs_form" model="ir.ui.view">
            <field name="name">softy.rec.doc.form</field>
            <field name="model">softy.rec.doc</field>
            <field name="arch" type="xml">
                <form string="Document de Recrutement">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" 
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        
                        <group>
                            <field name="nom" placeholder="ex: Modèle de Contrat CDI"/>
                            <field name="doc" filename="nom"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_softy_rec_docs_search" model="ir.ui.view">
            <field name="name">softy.rec.doc.search</field>
            <field name="model">softy.rec.doc</field>
            <field name="arch" type="xml">
                <search string="Rechercher Documents">
                    <field name="nom" string="Nom du Document"/>
                    
                    <filter string="Actifs" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archivés" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Menu under Recruitment root (same level as Applications, Reporting, Configuration) -->
        <menuitem
            id="menu_softy_rec_docs"
            name="Documents de Recrutement"
            parent="hr_recruitment.menu_hr_recruitment_root"
            action="action_softy_rec_docs"
            sequence="15"/>
    </data>
</odoo>